<!DOCTYPE html>
<html lang="en">
<%- include('partials/head'); %>
<body>
  <%- include('partials/header', {bookTitle: 'Bookster'}); %>
  <div class="container">
    <% books.forEach( book => { %>
      <div class="thumbnail">
        <div class="inner-nail">
          <img src="<%= book.image_url %>" alt="medium">
          <div class="presentation">
            <h4 class="title"><%= book.title %></h4>
            <p class="author"><%= book.author %></p>
            <p class="read"><a href="/book/<%= book.id %>">Read More &#8250;</a></p>
          </div>
        </div>
      </div>
    <% });%>
  </div>
  <footer>
    <span><%= books.length %></span>
    <img src="../images/mgsloan-book.png" alt="">
  </footer>
  <%- include('partials/necessary'); %>
</body>
</html>
